<div class="container mt-4">
  <div class="row">
    <div class="col-sm-8">
      <article class="userslist maincontent">
        <% all_users.forEach(function (user) { %>
        <div class="mb-4">
          <h4 class="userslist-title"><%=user.title%></h4>
          <div class="userslist-name">
            of
            <a href="/users/<%=user.title%>"><%=user.name%></a>
          </div>
          <div class="row userslist-info mt-2">
            <div class="col-sm-3">
              <a href="/users/<%=user.title%>">
                <img
                  class="userslist-img rounded-circle img-fluid"
                  src="/images/titles/<%=user.title%>_tn.jpg"
                  alt="Photo of <%=user.name%>"
                />
              </a>
            </div>
            <div class="col-sm-9"><%=user.summary%></div>
          </div>
        </div>
        <% }) %>
      </article>
    </div>
    <aside class="col-sm-4"><%- include('./partials/artwork') %></aside>
  </div>
</div>
