<div class="card-body">
  <% if(all_orders) { %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Status</th>
        <th scope="col">Email</th>
        <th scope="col">Date</th>
        <th scope="col">Items</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% all_orders.forEach(function(order) { %>
      <tr>
        <th scope="row"><%= JSON.stringify(order.id) %></th>
        <td><%= JSON.stringify(order.status) %></td>
        <td><%= JSON.stringify(order.email) %></td>
        <td><%= JSON.stringify(order.createdAt) %></td>
        <td>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th scope="col">SKU</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
              </tr>
            </thead>
            <tbody>
              <% order.OrderItems.forEach(function(item) { %>
              <tr>
                <td><%= JSON.stringify(item.sku) %></td>
                <td><%= JSON.stringify(item.name) %></td>
                <td><%= JSON.stringify(item.price) %></td>
                <td><%= JSON.stringify(item.qty) %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </td>
        <td>
          <% if(order.status !== 'Shipped') { %>
          <a
            class="btn btn-primary"
            href="/smallshop/admin/order/setShipped/<%= JSON.stringify(order.id) %>"
            role="button"
            disabled
            >Set Shipped</a
          >
          <% } else { %>
          <button type="button" class="btn btn-outline-success" disabled>Order Shipped</button>
          <% }%>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } %>
</div>
